{{$adminjs}}<script type="text/javascript">
  function toggle(state, feature) {
    var url = "{{baseUri}}feature-state?" + state + "=" + feature;
    window.location = url;
  }
  
  function enable(feature) {
    toggle("enable", feature);
  }
  
  function disable(feature) {
    toggle("disable", feature);
  }
</script>{{/adminjs}}
