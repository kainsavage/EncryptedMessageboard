<?xml version="1.0" encoding="UTF-8"?>
<!--

  EncryptedMessageboard web.xml

-->
<web-app>

  <!-- Force static assets to be served by the servlet container. -->
  <servlet-mapping>
    <url-pattern>/css/*</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>/js/*</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>/images/*</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>/html/*</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>/favicon.ico</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>/static/*</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>

  <!-- Disallow the servlet container from compiling PHP or JSP pages directly. -->
  <mime-mapping>
    <extension>php</extension>
    <mime-type>text/plain</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>jsp</extension>
    <mime-type>text/plain</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>jspf</extension>
    <mime-type>text/plain</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>jspx</extension>
    <mime-type>text/plain</mime-type>
  </mime-mapping>
  <servlet-mapping>
    <url-pattern>*.php</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>*.jsp</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>*.jspx</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>
  <servlet-mapping>
    <url-pattern>*.jspf</url-pattern>
    <servlet-name>default</servlet-name>
  </servlet-mapping>

  <!-- Disallow URL rewriting for sessions. -->
  <!-- Unfortunately, this is not compatible with Resin, despite the fact that
       it's in the Servlet 3.0 specification. Note that the same setting is
       configured in resin-specific syntax within the accompanying resin.xml
       file. -->
  <!--
